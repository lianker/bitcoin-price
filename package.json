{
  "name": "bitcoin-price",
  "version": "1.0.0",
  "description": "a simple CLI to convert bitcoin values to any currency",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint src/*.js",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require @babel/register --require @babel/polyfill",
    "test:tdd": "npm run test -- --watch",
    "clear": "rimraf bin",
    "build": "npm run clear && ./node_modules/.bin/babel --out-dir bin src",
    "build:watch": "npm run build -- --watch"
  },
  "preferGlobal": true,
  "bin": {
    "bitcoin-price": "./bin/main.js"
  },
  "author": "Lianker Lopes <lianker.dev@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.4",
    "@babel/node": "^7.5.0",
    "@babel/preset-env": "^7.5.4",
    "@babel/register": "^7.4.4",
    "chai": "^4.2.0",
    "eslint": "^6.0.1",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "mocha": "^10.2.0",
    "nock": "^10.0.6",
    "node-fetch": "^2.6.0",
    "prettier": "^1.18.2",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "chalk": "^2.4.2",
    "commander": "^2.20.0",
    "ora": "^3.4.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7"
  }
}
